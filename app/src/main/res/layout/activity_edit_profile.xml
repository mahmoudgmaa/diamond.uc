<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.inmobi.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondry"
    tools:context="com.AZEM.diamonduc2.navigatorFragments.profile.editProfile">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView152"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6437456633370907/5377335011"/>

    <ImageView
        android:id="@+id/backFromEditDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:tint="@color/white"
        android:layout_below="@+id/adView152"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/rot"
        android:layout_below="@+id/adView152"
        android:layout_above="@+id/adView11"
        android:layout_marginBottom="@dimen/_7sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_75sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/button_new2"
            android:padding="@dimen/_7sdp">

            <LinearLayout
                android:id="@+id/linearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_38sdp"
                android:orientation="horizontal">


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearing"
                android:layout_marginTop="@dimen/_37sdp"
                android:orientation="vertical">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:hint="@string/username"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    app:met_baseColor="@color/white"
                    app:met_primaryColor="@color/white"
                    app:met_textColorHint="@color/white"/>


                <Button
                    android:layout_below="@+id/usernameEditText"
                    android:id="@+id/saveEditing"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/button_new"
                    android:textColor="@color/white"
                    android:text="@string/save"
                    android:layout_alignParentRight="true" />

                <Button
                    android:id="@+id/logOut"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_below="@+id/usernameEditText"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/saveEditing"
                    android:background="@drawable/button_new"
                    android:textColor="@color/white"
                    android:text="@string/log_out" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profileImageRelativeLayout"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/prof" />

            <ImageView
                android:id="@+id/editProfileImage"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/camera_foreground" />
        </RelativeLayout>
    </RelativeLayout>
