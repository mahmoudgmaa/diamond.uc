<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_110sdp"
    android:layout_height="@dimen/_140sdp"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/button_black_new2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_1sdp"
        android:scaleType="fitXY"
        android:id="@+id/rewardImg"
        android:layout_above="@+id/numberOfDollars"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 u.s.d"
        android:id="@+id/numberOfDollars"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cashRequestButton"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_11ssp"
        android:textStyle="bold" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_22sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button3"
        android:text="6900 C"
        android:textColor="@color/white"
        android:id="@+id/cashRequestButton"/>

</RelativeLayout>